<h1>Sign Up Form</h1>

<% @user.errors.any? %>
  <h1> You done goofed, son!</h1>
  <ol>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ol>
<% end %>

<% form_for @user do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :submit %>
    <%= f.submit %>
  </p>
<% end %>